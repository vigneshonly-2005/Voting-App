<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Button for creating a poll -->
    <Button
        android:id="@+id/createPollButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Poll"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Button for voting on a poll -->
    <Button
        android:id="@+id/votePollButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vote on Poll"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Button for viewing poll results -->
    <Button
        android:id="@+id/viewResultsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Poll Results"
        android:textSize="18sp" />

</LinearLayout>
